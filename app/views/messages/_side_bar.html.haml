.side-bar

  .header
    .header__box
      .header__box__user
        = current_user.name

      %ul.header__box__menu
        %li.header__box__menu__add-group
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.header__box__menu__edit-user
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')

  .group
    - current_user.groups.each do |group|
      .group__list
        = link_to group_messages_path(group) do
          .group__list__name
            = group.name
          .group__list__message
            = group.show_last_message